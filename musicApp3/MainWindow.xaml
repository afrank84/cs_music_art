<Window x:Class="musicApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MP3 File Viewer" Height="350" Width="500">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open Folder" Click="OpenFolder_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Views">
                <MenuItem Header="List View"/>
                <MenuItem Header="Gallery View"/>
            </MenuItem>
        </Menu>

        <ListView Name="mp3ListView" SelectionChanged="mp3ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Name" Width="350" DisplayMemberBinding="{Binding FileName}" />
                    <GridViewColumn Header="File Path" Width="350" DisplayMemberBinding="{Binding FilePath}" />
                    <GridViewColumn Header="Artist" Width="350" DisplayMemberBinding="{Binding Artist}" />
                    <GridViewColumn Header="Album" Width="350" DisplayMemberBinding="{Binding Album}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Grid DockPanel.Dock="Right">
            <Image x:Name="coverArtImage" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock x:Name="coverArtMessage" Text="No cover art found." Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock x:Name="selectedItemInfo" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </DockPanel>
</Window>
