<Window x:Class="musicApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MP3 File Viewer" Height="350" Width="500">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open Folder" Click="OpenFolder_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Views">
                <MenuItem Header="List View"/>
                <MenuItem Header="Gallery View"/>
            </MenuItem>
        </Menu>

        <ListView Name="mp3ListView" SelectionChanged="mp3ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Name" Width="350" DisplayMemberBinding="{Binding FileName}" />
                    <GridViewColumn Header="File Path" Width="350" DisplayMemberBinding="{Binding FilePath}" />
                    <GridViewColumn Header="Artist" Width="250" DisplayMemberBinding="{Binding Artist}" />
                    <GridViewColumn Header="Album" Width="250" DisplayMemberBinding="{Binding Album}" />
                </GridView>
            </ListView.View>
        </ListView>


        <Grid DockPanel.Dock="Right">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Image for displaying cover art -->
                <Border Width="250" Height="250" MouseLeftButtonDown="ImageClicked">
                    <Image x:Name="coverArtImage" Width="250" Height="250"/>
                </Border>

                <!-- TextBlock for cover art message -->
                <TextBlock x:Name="coverArtMessage" Text="No cover art found." Visibility="Collapsed" />

                <!-- TextBlock for selected item info -->
                <TextBlock x:Name="selectedItemInfo" />

                <Border x:Name="emptyCoverArt" Width="250" Height="250" BorderBrush="Black" BorderThickness="2" Background="White">
                    <TextBlock Text="X" FontSize="96" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Label Content="MP3 File Path:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFilePath" Grid.Column="1" VerticalAlignment="Center"/>
                <Button Content="Open MP3" Click="OpenMP3_Click" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Label Content="New Artist:" Grid.Row="1"/>
                <TextBox x:Name="txtNewArtist" Grid.Row="1" Grid.Column="1"/>
                <Label Content="New Cover URL:" Grid.Row="2"/>
                <TextBox x:Name="txtNewCoverURL" Grid.Row="2" Grid.Column="1"/>
                <Button Content="Update Metadata" Click="UpdateMetadata_Click" Grid.Row="3" HorizontalAlignment="Right"/>
            </StackPanel>
            
        </Grid>
        
    </DockPanel>
    
</Window>
